
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.section{
  display: flex;
  width: 600rpx;
  margin: 40rpx 0;
  align-items:center;
}

.section .section__title{
  width: 130rpx;
  margin-right: 30rpx;
  text-align: right;
}

.section input{
  width: 350rpx;
  border: 1px solid #ddd;
  padding: 5px 10px;
  border-radius: 4px;
}
.section text{
  font-size: 30rpx;
  width: 300rpx;
  padding-left: 50rpx;

}
.section button{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
}

            

